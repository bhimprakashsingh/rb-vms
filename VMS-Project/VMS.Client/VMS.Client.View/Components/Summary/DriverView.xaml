<UserControl x:Class="VMS.Client.View.Component.Summary.DriverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
    	<ListView Style="{DynamicResource ListViewFleetStyle}" Background="Transparent" ItemContainerStyle="{DynamicResource DriverListViewItemStyle}" ItemsSource="{Binding Drivers}" BorderBrush="Transparent" BorderThickness="0">
    		<ListView.View>
    			<GridView>
    				<GridViewColumn/>
    			</GridView>
    		</ListView.View>
    	</ListView>

    </Grid>
</UserControl>
