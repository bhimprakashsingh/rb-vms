<UserControl x:Class="VMS.Client.View.Component.Summary.VehicleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
    	<ListView Style="{DynamicResource ListViewFleetStyle}" Background="Transparent" BorderThickness="0" ItemContainerStyle="{DynamicResource ListViewVehicleItemStyle}" ItemsSource="{Binding Vehicles}">
    		<ListView.View>
    			<GridView>
    				<GridViewColumn/>
    			</GridView>
    		</ListView.View>
    	</ListView>

    </Grid>
</UserControl>
