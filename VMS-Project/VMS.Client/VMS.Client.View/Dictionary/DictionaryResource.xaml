    <Style x:Key="DriverListViewItemStyle"
           TargetType="{x:Type ListViewItem}">
        <Setter Property="Template"
                Value="{DynamicResource DriverListBoxItemControlTemplate}" />
    </Style>
    <ControlTemplate x:Key="DriverListBoxItemControlTemplate"
                     TargetType="{x:Type ListBoxItem}">
        <Border x:Name="Bd"
                SnapsToDevicePixels="True"
                Margin="3"
                CornerRadius="5"
                MinHeight="32"
                BorderThickness="0.5"
                MinWidth="32">
            <Border.BorderBrush>
                <SolidColorBrush Color="{DynamicResource GrayListboxItemBorder}" />
            </Border.BorderBrush>
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource GrayListBoxItemBackground}" />
            </Border.Background>
            <Grid x:Name="grid"
                  Height="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal"
                            Width="Auto"
                            d:LayoutOverrides="Height"
                            Margin="5,0,0,0">
                    <TextBlock x:Name="txtLastName"
                               VerticalAlignment="Center"
                               TextWrapping="NoWrap"
                               Text="{Binding LastName}"
                               FontWeight="Normal"
                               FontSize="16"
                               Height="Auto"
                               HorizontalAlignment="Left"
                               Margin="0"
                               FontFamily="MS Reference Serif" />
                    <TextBlock x:Name="txtFirstName"
                               TextWrapping="NoWrap"
                               Text="{Binding FirstName}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontFamily="MS Reference Serif"
                               FontSize="16"
                               RenderTransformOrigin="0.5,0.5"
                               Margin="5,0,0,0" />
                </StackPanel>
                <Border x:Name="border"
                        Grid.Column="0"
                        Height="30"
                        Width="30"
                        CornerRadius="5"
                        BorderThickness="0.5"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        BorderBrush="White">
                    <Border.Background>
                        <SolidColorBrush Color="{DynamicResource GrayIconListboxItemBackground}" />
                    </Border.Background>
                    <Image x:Name="image"
                           Source="/VMS.Client.TrackingSystem;component/Images/Administrator.png"
                           Width="24"
                           Height="24"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                </Border>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="Selector.IsSelected"
                     Value="True">
                <Setter Property="Background"
                        TargetName="Bd">
                    <Setter.Value>
                        <SolidColorBrush Color="{DynamicResource ListboxSelectedBackground}" />
                    </Setter.Value>
                </Setter>
                <Setter Property="Background"
                        TargetName="border"
                        Value="White" />
                <Setter Property="Foreground"
                        TargetName="txtLastName"
                        Value="White" />
                <Setter Property="FontWeight"
                        TargetName="txtLastName"
                        Value="Bold" />
                <Setter Property="Foreground"
                        TargetName="txtFirstName"
                        Value="White" />
                <Setter Property="FontWeight"
                        TargetName="txtFirstName"
                        Value="Bold" />
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsSelected"
                               Value="True" />
                    <Condition Property="Selector.IsSelectionActive"
                               Value="False" />
                </MultiTrigger.Conditions>
                <Setter Property="Background"
                        TargetName="Bd">
                    <Setter.Value>
                        <SolidColorBrush Color="#FFB3C3F7" />
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground"
                        TargetName="txtLastName"
                        Value="#FF919191" />
                <Setter Property="Foreground"
                        TargetName="txtFirstName"
                        Value="#FF919191" />
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
